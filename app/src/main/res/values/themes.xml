<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Base.Theme.FourthProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Настройка цветов для светлой темы -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorOnPrimary">@color/my_light_on_primary</item>
        <item name="colorPrimaryContainer">@color/my_light_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/my_light_on_primary_container</item>

        <item name="colorSecondary">@color/my_light_secondary</item>
        <item name="colorOnSecondary">@color/my_light_on_secondary</item>
        <item name="colorSecondaryContainer">@color/my_light_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/my_light_on_secondary_container</item>


        <item name="colorOnBackground">@color/my_light_on_background</item>
        <item name="colorSurface">@color/my_light_surface</item>
        <item name="colorOnSurface">@color/my_light_on_surface</item>


        <!-- Кастомизация кнопок -->
        <item name="materialButtonStyle">@style/Widget.FourthProject.Button</item>
    </style>

    <!-- Основная тема -->
    <style name="Theme.FourthProject" parent="Base.Theme.FourthProject" />






    <!-- Стили кнопок -->
    <style name="Widget.FourthProject.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/my_light_primary</item>
        <item name="android:textColor">@color/my_light_on_primary</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
